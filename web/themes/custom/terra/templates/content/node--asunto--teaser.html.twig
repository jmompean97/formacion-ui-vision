{{ attach_library('bootstrap_barrio/node') }}

{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    'clearfix',
    'list-link'
  ]
%}
<div{{ attributes.addClass(classes, 'paragraph') }}>
  <i class="fas fa-caret-right icon-green"></i> <a href="{{ url }}" rel="bookmark" class="stretched-link">{{ label }}</a>
</div>
