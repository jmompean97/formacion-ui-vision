{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
  ]
%}
{%
  set title_classes = [
    'field__label',
    label_display == 'visually_hidden' ? 'visually-hidden',
  ]
%}

{% if label_hidden %}
  {% if multiple %}
    <div{{ attributes.addClass(classes, 'field__items') }}>
      {% for item in items %}
        <div{{ item.attributes.addClass('field__item') }}>{{ item.content }}</div>
      {% endfor %}
    </div>
  {% else %}
    {% for item in items %}
      <div{{ attributes.addClass(classes, 'field__item') }}>{{ item.content }}</div>
    {% endfor %}
  {% endif %}
{% else %}
  <div{{ attributes.addClass(classes) }}>
    <h3{{ title_attributes.addClass(title_classes) }}>{{ label }}</h3>
    {% if multiple %}
      <div class='field__items'>
    {% endif %}
    <table class="tabla-con-encabezado">
      <tbody>
        {% for item in items %}
         {% if item.content['#paragraph'].field_dispensa_org.0.value|render or item.content['#paragraph'].field_dispensa_num.0.value|render %}
            {% if loop.first %}
              <tr>
                <th>{{ item.content['#paragraph'].field_dispensa_org.0.fieldDefinition.label }}</th>
                <th>{{ item.content['#paragraph'].field_dispensa_num.0.fieldDefinition.label }}</th>
              </tr>
            {% endif %}
            {{ item.content }}
          {% endif %}
        {% endfor %}
      </tbody>
    </table>
    {% if multiple %}
      </div>
    {% endif %}
  </div>
{% endif %}
