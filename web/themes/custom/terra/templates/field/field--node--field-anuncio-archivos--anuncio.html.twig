{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
    'list-link'
  ]
%}
{%
  set title_classes = [
    'field__label',
    label_display == 'visually_hidden' ? 'visually-hidden',
  ]
%}

{% if label_hidden %}
  {% if multiple %}
    <div{{ attributes.addClass(classes, 'field__items') }}>
      {% for item in items %}
        <div{{ item.attributes.addClass('field__item') }}>{{ item.content }}</div>
      {% endfor %}
    </div>
  {% else %}
    {% for item in items %}
      <div{{ attributes.addClass(classes, 'field__item') }}>{{ item.content }}</div>
    {% endfor %}
  {% endif %}
{% else %}
  <div{{ attributes.addClass(classes) }}>
    <h2{{ title_attributes.addClass(title_classes) }}>{{ label }}</h2>
    {% if multiple %}
      <div class='field__items'>
    {% endif %}
    
    {% for item in items %}
        <div class="field__item">
            <i class="fas fa-caret-right icon-green"></i> 
            {% if item.content['#media'].field_media_file.entity.uri.0.value|render %}
              <a href="{{ file_url(item.content['#media'].field_media_file.entity.uri.0.value) }}" 
              {% if item.content['#media'].field_media_file.0.description|render %}
                  title="{{ item.content['#media'].field_media_file.0.description }}">{{ item.content['#media'].field_media_file.0.description }}</a>
              {% else %}
                  title="{{ item.content['#media'].field_media_file.entity.filename.0.value }}">{{ item.content['#media'].field_media_file.entity.filename.0.value }}</a>
              {% endif %}
            {% endif %}
            
            {% if item.content['#media'].field_media_image.entity.uri.0.value|render %}
              <a href="{{ file_url(item.content['#media'].field_media_image.entity.uri.0.value) }}" 
              {% if item.content['#media'].field_media_image.0.alt|render %}
                  title="{{ item.content['#media'].field_media_image.0.alt }}">{{ item.content['#media'].field_media_image.0.alt }}</a>
              {% else %}
                  title="{{ item.content['#media'].field_media_image.entity.filename.0.value }}">{{ item.content['#media'].field_media_image.entity.filename.0.value }}</a>
              {% endif %}
            {% endif %}
        </div>
    {% endfor %}
    {% if multiple %}
      </div>
    {% endif %}
  </div>
{% endif %}